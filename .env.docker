# Environment variables for Docker deployment
# Copy this file to .env.production and modify values as needed

# Application
NODE_ENV=production
PORT=5000

# Database Configuration
# For Docker: Use local PostgreSQL instead of Neon Database
DATABASE_URL=postgresql://audioforge:audioforge_password@postgres:5432/audioforge

# PostgreSQL specific settings for Docker
PGUSER=audioforge
PGPASSWORD=audioforge_password
PGDATABASE=audioforge
PGHOST=postgres
PGPORT=5432

# Note: For cloud deployment, replace DATABASE_URL with your Neon Database connection string:
# DATABASE_URL=postgresql://user:password@host.neon.tech/database?sslmode=require

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production-minimum-32-characters

# Audio Processing Configuration
MAX_FILE_SIZE=100MB
UPLOAD_DIR=/app/uploads

# Optional: Redis Session Store (uncomment if using Redis)
# REDIS_URL=redis://redis:6379

# Security Settings
CORS_ORIGIN=http://localhost:5000

# Logging
LOG_LEVEL=info

# Performance Settings
MAX_AUDIO_DURATION=7200  # 2 hours in seconds
MAX_TRACKS=10
MAX_CLIPS_PER_TRACK=100

# Feature Flags
ENABLE_AUDIO_PROCESSING=true
ENABLE_FILE_UPLOAD=true
ENABLE_PROJECT_SAVE=true